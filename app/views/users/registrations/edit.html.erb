
<body class="editProfile-bg">
<div id="editForm">
  <div class="col-md-4 col-md-offset-4 col-sm-6 text-center">
      <h2 class="text-capitalize text-center"><%= current_user.username %> | Edit Profile</h2>
        
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label "First Name" %>
      <%= f.text_field :fName, autofocus: true, autocomplete: "fName",:required => true, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label "Last Name" %>
      <%= f.text_field :lName, autofocus: true, autocomplete: "lName", :required => true, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label "Date of Birth" %><br/>
      <%= f.date_select :date_of_birth, order: [:month, :day, :year], start_year: Date.today.year - 18, end_year: Date.today.year - 100, autofocus: true, autocomplete: "off", class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :gender %><br/>
      <%= f.select :gender, [["Male", "Male"], ["Female", "Female"], ["Other", "Other"]], prompt: 'Select...', class: 'form-control', id: "input-select" %> <br/>
    </div>
    <div class="form-group">
      <%= f.label "Phone Number" %>
      <%= f.text_field :phoneNumber, autofocus: true, autocomplete: "phoneNumber", class: "form-control"%>
    </div>    
    <div class="form-group">
      <%= f.label "Location" %>
      <%= f.text_field :location, autofocus: true, autocomplete: "location", class: "form-control"%>
    </div>   
    <div class="form-group">
      <%= f.label "Description" %>
      <%= f.text_area :description, autofocus: true, size: "5x5", autocomplete: "description", class: "form-control"%>
    </div>
  <!-- </div> -->
    <!-- <div class="col-sm-4"> -->
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "email", :readonly => true, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div>
  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "6 characters minimum", class: "form-control"  %>
    <% if @minimum_password_length %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(Enter your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
</div>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-sm btn-danger" %></p>

<%= link_to "Back", :back %>
<!-- </div> -->
</div>
</div>
</body>