<!-- Styling in users.scss -->


<style type="text/css">
  .min-pass {
    font-size: 10px;
    font-style: italic;
    margin: 0;
    padding: 1px;
  }

</style>
<body class="signup-bg">
  <div class="signup-overlay">
    <div id="signupForm">
      <div class="form-group">
    <h2 class="text-center">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.text_field :username, autofocus: true, autocomplete: "off",label: "Username", placeholder: "Username", class: "form-control" %>
  </div>
    <hr class="form-hr">
  <div >
    <%= f.email_field :email, autofocus: true, autocomplete: "email",label: "Email", placeholder: "Email", class: "form-control" %>
  </div>
    <hr class="form-hr">
    <% if @minimum_password_length %>
    <div class="text-center min-pass">Password must be at least <%= @minimum_password_length %> characters</div>
    <% end %>
  <div >
    <%= f.password_field :password, autocomplete: "off",label: "Password", placeholder: "Password", class: "form-control" %>
  </div>
    <hr class="form-hr">
  <div >
    <%= f.password_field :password_confirmation, autocomplete: "off",label: "Password_confirmation", placeholder: "Confirm Password", class: "form-control" %>
  </div>
    <hr class="form-hr">
  <div class="text-center">
    <%= f.submit "Sign up", class: "signup-btn btn btn-primary" %>
  </div>
<% end %>

<p class="text-center">Already have an account? <span class="link"><%= render "users/shared/links" %></span></p>
  </div>
  </div>
</div>
</body>
