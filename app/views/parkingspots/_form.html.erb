<div class="panel panel-default">
  <div class="panel-heading">
    Rent your Parking spot!
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @parkingspot do |f| %>
            <%= f.hidden_field :user_id,
            :value => current_user.id %>
        <div class="row">
            <div class="form-group">
              <label>Listing Name</label>
              <%= f.text_field :listing_name, placeholder: 'Be clear and descriptive', class: 'form-control' %>
            </div>
        </div>

          <div class="row">
            <div class="form-group">
              <label>Description</label>
              <%= f.text_area :description, rows: 5, placeholder: 'Tell about your parking spot!', class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label>Address</label>
              <%= f.text_field :address, placeholder: 'What is your address?', class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Daily Price</label>
                <div class="input-group">
                  <div class="input-group-addon">$</div>
                  <%= f.text_field :price, placeholder: 'e.g. $20', class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>

<!--           <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <span class="btn btn-default btn-file">
                  <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos
                  <%#= file_field_tag "images[]", type: :file, multiple: true %>
                </span>
              </div>
            </div>
          </div>
 -->
<!--           <div id="photos">
            <%#= render 'photos/list' %>
          </div> -->

          <div class="row">
            <div class="form-group">
              <label><%= f.check_box :rented %> Rented</label>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>