<head>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_API_KEY"] %>&libraries=places"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->



</head>

<script type="text/javascript">
            function init() {
                var input = document.getElementById('locationTextField');
                var autocomplete = new google.maps.places.Autocomplete(input);
            }
            google.maps.event.addDomListener(window, 'load', init);
</script>



<div class="panel panel-default">
  <div class="panel-heading">
    Rent your Parking spot!
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @parkingspot do |f| %>
            <%= f.hidden_field :user_id,
            :value => current_user.id %>
        <div class="row">
            <div class="form-group">
              <label>Listing Name</label>
              <%= f.text_field :listing_name, placeholder: 'Be clear and descriptive', class: 'form-control' %>
            </div>
        </div>

          <div class="row">
            <div class="form-group">
              <label>Description</label>
              <%= f.text_area :description, rows: 5, placeholder: 'Tell about your parking spot!', class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label>Address</label>
              <%= f.text_field :address, id:  "locationTextField", placeholder: 'What is your address?', class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Daily Price</label>
                <div class="input-group">
                  <div class="input-group-addon">$</div>
                  <%= f.text_field :price, placeholder: 'e.g. $20', class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>

<!--           <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <span class="btn btn-default btn-file">
                  <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos
                  <%#= file_field_tag "images[]", type: :file, multiple: true %>
                </span>
              </div>
            </div>
          </div>
 -->
<!--           <div id="photos">
            <%#= render 'photos/list' %>
          </div> -->

          <div class="row">
            <div class="form-group">
              <label><%= f.check_box :rented %> Rented</label>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>