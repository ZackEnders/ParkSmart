<head>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<!--    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script> -->
</head>

<div id="resForm">
	<div class="jumbotron">
		<div class="container">
			<div class="col-md-12 text-center start-end">
				<% if user_signed_in? %>
					<%= render "reservations/form" %>
				<% else %>
					<div class="text-center">Please <%= link_to 'Login', new_user_session_path%> or 
						<%= link_to 'Sign Up', new_user_registration_path %> to reserve this spot!</div>
				<% end %>
			</div>

			<div class="col-md-7">
				<%= image_tag @parkingspot.image.url(:med), class: "parkingspotpic" %>
				<h4><%= @parkingspot.address%></h4> 
				<h5><%= number_to_currency(@parkingspot.price) %> per day</h5>
				<h5>Description: <%= @parkingspot.description %></h5>
			</div>

			<div class="col-md-5">
				<%= render "maps/googlemaps" %>
			</div>
		</div>
	</div>
</div>